<Window x:Class="HoN_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoN_Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="HoN Launcher" Height="450" Width="800">
    <Grid>
        <Image Stretch="UniformToFill" Source="images/launcherBackground.jpg" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="PlayButton" Click="PlayButton_Click" Height="60" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,20,35" Padding="10,1,10,1" Width="224" Background="#FF635E5E" Content="Checking for Updates" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" TextAlignment="Right" FontSize="14" Foreground="White" Height="20"  Margin="0,0,20,10" Width="125"/>
    </Grid>
</Window>
